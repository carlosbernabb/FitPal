<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• SCROLLABLE CONTENT â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsvContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="90dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- â”€â”€ HEADER â”€â”€ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="24dp"
                android:paddingTop="32dp"
                android:paddingBottom="16dp">

                <!-- Profile Image with Red Border -->
                <androidx.cardview.widget.CardView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    app:cardBackgroundColor="#d02525"
                    app:cardCornerRadius="26dp"
                    app:cardElevation="0dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="23dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/ivAvatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:contentDescription="@null"
                            tools:src="@tools:sample/avatars" />
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>

                <!-- Greeting Text -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvGreeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hola, Omar ðŸ‘‹"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Â¿Listo para tu comida saludable?"
                        android:textColor="#9CA3AF"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- â”€â”€ CATEGORY LABEL â”€â”€ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="Comidas"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- â”€â”€ CATEGORY CHIPS â”€â”€ -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingHorizontal="24dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Seafood (Active) -->
                    <TextView
                        android:id="@+id/chipSeafood"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_category_active"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:text="Seafood"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <!-- Beef (Inactive) -->
                    <TextView
                        android:id="@+id/chipBeef"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/bg_category_inactive"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:text="Beef"
                        android:textColor="#D1D5DB"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <!-- Vegan (Inactive) -->
                    <TextView
                        android:id="@+id/chipVegan"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/bg_category_inactive"
                        android:gravity="center"
                        android:paddingHorizontal="20dp"
                        android:text="Vegan"
                        android:textColor="#D1D5DB"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- â”€â”€ RECIPE FEED (RecyclerView) â”€â”€ -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRecipes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                tools:listitem="@layout/item_recipe" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• BOTTOM NAVIGATION â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#F2121212"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- INICIO (active) -->
        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_home"
                app:tint="#d02525" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="INICIO"
                android:textColor="#d02525"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- PERFIL (inactive) -->
        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_person"
                app:tint="#6B7280" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="PERFIL"
                android:textColor="#6B7280"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
