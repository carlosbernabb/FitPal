<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- ═══════════════════════ CONTENT AREA ═══════════════════════ -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="96dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ── HEADER ── -->
            <LinearLayout
                android:id="@+id/ll_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="36dp"
                android:paddingBottom="16dp">

                <!-- Avatar (circular clip via ShapeableImageView) -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@color/primary"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/ShapeCircle"
                    app:strokeColor="@color/primary"
                    app:strokeWidth="2dp"/>

                <!-- Greeting text -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/tv_greeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_greeting"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_subtitle"
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp"/>
                </LinearLayout>

                <!-- Notification button -->
                <FrameLayout
                    android:id="@+id/btn_notifications"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_notification_btn"
                    android:foreground="?attr/selectableItemBackgroundBorderless">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_notifications"
                        android:contentDescription="@null"/>
                </FrameLayout>
            </LinearLayout>

            <!-- ── SEARCH BAR ── -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/bg_search_bar"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_search"
                    android:contentDescription="@null"/>

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:background="@null"
                    android:hint="@string/home_search_hint"
                    android:textColorHint="@color/text_hint"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:singleLine="true"
                    android:imeOptions="actionSearch"/>
            </LinearLayout>

            <!-- ── CATEGORY SECTION ── -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_recipes_title"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp"/>

            <!-- Horizontal chip scroll -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:clipToPadding="false">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Chip: Todas (active) -->
                    <LinearLayout
                        android:id="@+id/chip_all"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="@drawable/bg_chip_active"
                        android:layout_marginEnd="10dp">
                        <ImageView android:layout_width="14dp" android:layout_height="14dp"
                            android:src="@drawable/ic_check_circle" android:contentDescription="@null"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="  Todas" android:textColor="@color/white"
                            android:textSize="13sp" android:textStyle="bold"/>
                    </LinearLayout>

                    <!-- Chip: Populares -->
                    <LinearLayout android:id="@+id/chip_popular"
                        android:layout_width="wrap_content" android:layout_height="40dp"
                        android:orientation="horizontal" android:gravity="center_vertical"
                        android:paddingStart="16dp" android:paddingEnd="16dp"
                        android:background="@drawable/bg_chip_inactive"
                        android:layout_marginEnd="10dp">
                        <ImageView android:layout_width="14dp" android:layout_height="14dp"
                            android:src="@drawable/ic_fire" android:contentDescription="@null"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="  Populares" android:textColor="@color/text_secondary"
                            android:textSize="13sp" android:textStyle="bold"/>
                    </LinearLayout>

                    <!-- Chip: Nuevas -->
                    <LinearLayout android:id="@+id/chip_new"
                        android:layout_width="wrap_content" android:layout_height="40dp"
                        android:orientation="horizontal" android:gravity="center_vertical"
                        android:paddingStart="16dp" android:paddingEnd="16dp"
                        android:background="@drawable/bg_chip_inactive"
                        android:layout_marginEnd="10dp">
                        <ImageView android:layout_width="14dp" android:layout_height="14dp"
                            android:src="@drawable/ic_star_filled" android:contentDescription="@null"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="  Nuevas" android:textColor="@color/text_secondary"
                            android:textSize="13sp" android:textStyle="bold"/>
                    </LinearLayout>

                    <!-- Chip: Saludable -->
                    <LinearLayout android:id="@+id/chip_healthy"
                        android:layout_width="wrap_content" android:layout_height="40dp"
                        android:orientation="horizontal" android:gravity="center_vertical"
                        android:paddingStart="16dp" android:paddingEnd="16dp"
                        android:background="@drawable/bg_chip_inactive">
                        <ImageView android:layout_width="14dp" android:layout_height="14dp"
                            android:src="@drawable/ic_eco" android:contentDescription="@null"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="  Saludable" android:textColor="@color/text_secondary"
                            android:textSize="13sp" android:textStyle="bold"/>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- ── RECIPE FEED ── -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recipes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="20dp"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- ═══════════════════════ BOTTOM NAV ═══════════════════════ -->
    <LinearLayout
        android:id="@+id/ll_bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/bg_bottom_nav"
        android:paddingTop="10dp"
        android:paddingBottom="24dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Home -->
        <LinearLayout android:id="@+id/nav_home"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:orientation="vertical"
            android:gravity="center">
            <ImageView android:layout_width="24dp" android:layout_height="24dp"
                android:src="@drawable/ic_home" android:contentDescription="@null"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="INICIO" android:textColor="@color/primary"
                android:textSize="9sp" android:textStyle="bold"
                android:letterSpacing="0.08" android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Explorar -->
        <LinearLayout android:id="@+id/nav_explore"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:orientation="vertical"
            android:gravity="center">
            <ImageView android:layout_width="24dp" android:layout_height="24dp"
                android:src="@drawable/ic_search_nav" android:contentDescription="@null"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="EXPLORAR" android:textColor="@color/text_hint"
                android:textSize="9sp" android:textStyle="bold"
                android:letterSpacing="0.08" android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- FAB placeholder space -->
        <FrameLayout android:layout_width="0dp" android:layout_height="56dp"
            android:layout_weight="1"/>

        <!-- Guardados -->
        <LinearLayout android:id="@+id/nav_saved"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:orientation="vertical"
            android:gravity="center">
            <ImageView android:layout_width="24dp" android:layout_height="24dp"
                android:src="@drawable/ic_favorite" android:contentDescription="@null"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="GUARDADOS" android:textColor="@color/text_hint"
                android:textSize="9sp" android:textStyle="bold"
                android:letterSpacing="0.08" android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Perfil -->
        <LinearLayout android:id="@+id/nav_profile"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:orientation="vertical"
            android:gravity="center">
            <ImageView android:layout_width="24dp" android:layout_height="24dp"
                android:src="@drawable/ic_person" android:contentDescription="@null"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="PERFIL" android:textColor="@color/text_hint"
                android:textSize="9sp" android:textStyle="bold"
                android:letterSpacing="0.08" android:layout_marginTop="2dp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- FAB (elevated above bottom nav) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/primary"
        app:tint="@color/white"
        app:elevation="8dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@id/ll_bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="-28dp"
        android:contentDescription="@string/cd_fab_add"/>

</androidx.constraintlayout.widget.ConstraintLayout>
