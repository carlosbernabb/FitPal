<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.FitPal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/background_dark</item>
    </style>

    <!-- Splash: fullscreen -->
    <style name="Theme.FitPal.Splash" parent="Theme.FitPal">
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <!-- Auth screens (Login / Register): transparent status bar -->
    <style name="Theme.FitPal.Auth" parent="Theme.FitPal">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/background_login</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <!-- Home / Main: dark status bar -->
    <style name="Theme.FitPal.Main" parent="Theme.FitPal">
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <!-- Input field style (used in Login + Register) -->
    <style name="FitPal.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/input_bg</item>
        <item name="boxStrokeColor">@color/selector_input_stroke</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="startIconTint">@color/text_hint</item>
        <item name="endIconTint">@color/text_hint</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <!-- Avatar circle shape override for ShapeableImageView -->
    <style name="ShapeCircle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
